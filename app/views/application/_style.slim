sass:
	body
		background: rgb(12, 16, 34)
		color: rgb(248, 248, 248)
		font-family: Monaco, Inconsolata, Courier New, Courier
		margin: auto
		margin-top: 15px
		width: 900px
	a
		font-weight: bold
		text-decoration: none
		cursor: pointer

	ul 
		list-style-type: none

	font
		font-weight: bold

	.dim
		opacity: .70
		font-size: 10pt
		
		li & 
			display: none

		li:hover &
			display: inline

	.bold
		color: rgb(252, 244, 0)

	.highlight1
		color: rgb(92, 208, 46)

	.link
		color: rgb(255,100,0)

	.highlight2
		color: rgb(140, 168, 208)

	#theme-switch
		height 25px
		width: 100px
		position: fixed
		top: 0px
		right: 0px

		#bang
			border: none
			width: 25px
			height: 25px
			background: rgba(255,255,255, 0.2)
			text-align: center
			font-weight: bold
			font-size: 15px
			cursor: pointer
			float: right
				
			&:hover
				background: rgba(255,255,255, 0.3)

		label
			font-size: 10px
			opacity: 0.7
			display: none

.clipboard
	background: none